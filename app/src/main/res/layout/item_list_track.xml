<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    style="@style/TrackCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trackName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp"
        android:layout_alignTop="@+id/genre"
        android:layout_alignLeft="@+id/artistName"
        android:layout_alignStart="@+id/artistName"
        android:layout_toLeftOf="@+id/trackPrice"
        android:layout_toStartOf="@+id/trackPrice" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artistName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13dp"
        android:layout_below="@+id/trackName"
        android:layout_toRightOf="@+id/artwork"
        android:layout_toEndOf="@+id/artwork"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="6dp" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="genre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/trackPrice"
        android:layout_alignEnd="@+id/trackPrice"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/trackPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trackPrice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14dp"
        android:layout_below="@+id/genre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/artwork"
            android:layout_margin="2dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>